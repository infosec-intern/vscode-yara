{
    "name": "yara",
    "displayName": "YARA",
    "description": "Syntax highlighting and snippets support for the YARA pattern matching language",
    "version": "1.1.1",
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#A4A4A4",
        "theme": "dark"
    },
    "publisher": "infosec-intern",
    "license": "MIT License - full document in LICENSE.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/infosec-intern/textmate-yara"
    },
    "bugs": {
        "url": "https://github.com/infosec-intern/textmate-yara/issues"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "yara",
                "aliases": [
                    "yara",
                    "yara-syntax",
                    "yaralang",
                    "YARA",
                    "Yara"
                ],
                "extensions": [
                    ".yara",
                    ".yar"
                ],
                "configuration": "yara/yara.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "yara",
                "scopeName": "source.yara",
                "path": "yara/syntaxes/yara.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "yara",
                "path": "yara/snippets/yara.json"
            }
        ]
    }
}